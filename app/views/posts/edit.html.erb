<div class="d-flex align-items-center min-vh-100">
  <div class="container text-center">
          <h1>Edit Article</h1>
          <%= form_for @post do |form| %>
            <%= form.text_area :message %>
            <br>
            <%= form.submit "Submit" %>
          <% end %>

          <% if @post.errors.any? %>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>
